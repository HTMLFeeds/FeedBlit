{
	"compilerOptions": {
		"outFile": "+build/feedblit.debug.js",
		"composite": true,
		"module": "system",
		"moduleResolution": "node",
		"target": "esnext",
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"baseUrl": "./",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"stripInternal": true,
		"incremental": true,
		"preserveConstEnums": true,
		"lib": [
			"dom",
			"esnext",
			"esnext.array",
			"esnext.asynciterable"
		]
	},
	"include": [
		"core/**/*.ts",
		"cover/**/*.ts",
	],
	"exclude": [
		"+build/**/*.ts"
	],
	"references": [
		{ "path": "../Hot/tsconfig.json" },
		{ "path": "../Hotdom/tsconfig.json" },
		{ "path": "../Omniview/tsconfig.json" }
	]
}
